<% include ../partials/header %>

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To IR Man!</h1>
             <p>Check out your devices!</p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% userDevices.forEach(function(userDevice){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <div class="caption">
                       <h4><%= userDevice.deviceName %></h4>
                   </div>
                   <p>
                       <a href="/devices/<%=userDevice._id%>" class="btn btn-primary">Go To Control Panel</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>